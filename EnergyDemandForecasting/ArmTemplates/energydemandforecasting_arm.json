    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "vmName": "[toLower(concat('co', uniqueString(resourceGroup().id)))]"
  },
  "resources": [
        {
        "apiVersion": "2017-05-10",
        "name": "dsvmTemplate",
        "type": "Microsoft.Resources/deployments",      
        "properties": {
        "mode": "incremental",
        "templateLink": {
            "uri":"https://github.com/ytthuan/LeoSQLServerRServices/edit/master/EnergyDemandForecasting/ArmTemplates/dsvm_arm.json",
            "contentVersion":"1.0.0.0"
                },
        "parameters": {
            "adminUsername": { "value": "[parameters('adminUsername')]" },
            "adminPassword": { "value": "[parameters('adminPassword')]" },
            "vmName": { "value": "[variables('vmName')]" },
            "vmSize": { "value": "[parameters('vmSize')]" }
                }
            }
        },
        {
        "apiVersion": "2017-05-10",
        "name": "configureTemplate",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "dsvmTemplate"
          ],        
        "properties": {
        "mode": "incremental",
        "templateLink": {
            "uri":"https://raw.githubusercontent.com/Microsoft/SQL-Server-R-Services-Samples/master/EnergyDemandForecasting/ArmTemplates/configure_arm.json",
            "contentVersion":"1.0.0.0"
                },
        "parameters": {
            "adminUsername": { "value": "[parameters('adminUsername')]" },
            "adminPassword": { "value": "[parameters('adminPassword')]" },
            "vmName": { "value": "[variables('vmName')]" }
                }
            }
        }
  ]
}
